                        @foreach (Requirement? requirement in paginatedRequirementDTO.lstRequirement)
                        {
                            <div class="card shadow-lg mt-2">
                                <div class="card-body">
                                        <p><b>RequirementId: </b>@requirement?.RequirementId</p>
                                        @if (@requirement!.Active)
